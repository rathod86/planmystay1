# Copy this file to .env and fill in your values (for local development).
# On Render.com, set these as Environment Variables in the Dashboard instead of using .env.

# Required for database
# Local: mongodb://127.0.0.1:27017/planmystay
# Atlas: mongodb+srv://USER:PASSWORD@cluster0.xxxxx.mongodb.net/planmystay?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/planmystay

# Required for sessions (use a long random string in production)
SESSION_SECRET=your-session-secret-change-this

# Mapbox (for maps) - get token at https://account.mapbox.com/
MAP_TOKEN=pk.your_mapbox_public_token

# Cloudinary (for image uploads) - get at https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
